<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imageid1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/home1"
        android:padding="8dp"
        />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/action_logout_for_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|right"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:icon="@drawable/ic_baseline_login_24"
        android:text="@string/logout"

        />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/display_name_for_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="@color/black"
        />

    <ImageView
        android:id="@+id/back_button_in_home_as_user"
        style="@style/BackButtonNav"

        android:layout_alignTop="@+id/display_name_for_user"

        android:layout_alignBottom="@+id/display_name_for_user"

        />




</RelativeLayout>
